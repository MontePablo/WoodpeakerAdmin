<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/item_order_root_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:background="@drawable/shape_corner100dp_strokeshadow2dp">

    <ImageView
        android:id="@+id/item_order_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/item_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_order_image"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Repair your AC Fridge"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="status"
        app:layout_constraintLeft_toRightOf="@id/item_order_image"
        app:layout_constraintTop_toBottomOf="@id/item_order_title"/>
    <TextView
        android:id="@+id/item_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Delivered"
        android:textColor="#9E65E3"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/item_order_title" />
    <TextView
        android:id="@+id/item_order_dateTime"
        android:layout_marginLeft="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="10.02.21 19:38"
        app:layout_constraintTop_toBottomOf="@id/item_order_image"
        app:layout_constraintLeft_toLeftOf="parent"/>


        


</androidx.constraintlayout.widget.ConstraintLayout>